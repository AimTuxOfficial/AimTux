#!/bin/bash
dir_name=${PWD##*/}
if [ ! -d ".git" ]; then
  cd ../ && rm -rf ./$dir_name && git clone --recursive https://github.com/AimTuxOfficial/AimTux $dir_name && bash ./$dir_name/update
else
  git pull
  git submodule update --init --recursive --remote
  cmake .
  make -j$(cat /proc/cpuinfo | grep "^processor" | wc -l) "$@"
fi

